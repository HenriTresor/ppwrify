{
"compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",               // or "NodeNext" for best ESM support
    "moduleResolution": "node",       // or "nodenext"
    "outDir": "dist",
    "rootDir": "./",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true
}
}
